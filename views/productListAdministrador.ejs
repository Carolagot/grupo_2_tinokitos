<%- include("./partials/head") %>
    <link rel="stylesheet" href="/css/stylesList.css">
    <title>Administrar Productos</title>
    </head>

    <body>

        <%- include("./partials/header") %>

            <main>

                <img class="banner-desktop" src="/imagenes/banner.jpg" alt="">

                <img class="banner-cel" src="/imagenes/banner-cel.jpg" alt="">
                <br>
                <section>

                    <div class="titulo">
                        <h1>Administrar Productos</h1>
                        <a href="/administrador/createProduct"><button>CREAR PRODUCTO</button></a>
                    </div>
                    
                    <br>
                    <br>
                    <div class="contenedor-productos">
                        <% productos.forEach (producto=> { %>
                            <article>
                                <img src="<%= producto.fotoProducto %>" alt="<%= producto.nombre %>">
                                <div class="texto">
                                    <a href="/administrador/editProduct/<%= producto.id %>">
                                        <h2>
                                            <%= producto.nombre %>
                                        </h2>
                                    
                                    <h3>
                                        <%= producto.precio %>
                                    </h3>
                                </a>
                                </div>
                            </article>
                            <% }) %>
                    </div>

            </main>

            <%-include("./partials/footer")%>

    </body>



    </html>